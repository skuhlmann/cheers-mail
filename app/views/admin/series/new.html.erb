<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <%= form_for([:admin, @series]) do |f| %>
      <% if @series.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@series.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @series.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
