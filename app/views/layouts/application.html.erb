<!DOCTYPE html>
<html>
<head>
  <title>CheersMail</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper">
  <i class="fa fa-beer header-icon"></i>

    <% flash.each do |name, msg| -%>
    <div class="flash">
      <%= content_tag :div, msg %>
    </div>
    <% end %>

    <% if current_user %>
      <%= link_to "Log Out", logout_path, method: :delete %>
    <% end %>

    <%= yield %>

  </div>
  <div class="push"></div>
</div>

<div class="footer">
  <%= render "shared/footer" %>
  <i class="fa fa-beer header-icon"></i>
</div>

</body>
</html>
